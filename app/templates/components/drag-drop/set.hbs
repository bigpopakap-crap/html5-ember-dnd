{{#each _sortableItems key="sortKey" as |sortableItem|}}
    {{yield (hash
        cmp=(component "drag-drop/item"
            data=sortableItem.sortKey
            enableTouch=enableTouch
            enableKeyboard=enableKeyboard
            beReadyForDrop=isGrabbed
            afterGrab=(action "afterGrab")
            onDragStart=(action "onDragStart")
            onDragOver=(action "onDragOver")
            onDrop=(action "onDrop")
            onDragCancel=(action "onDragCancel")
            onDragEnd=(action "onDragEnd")
            afterRelease=(action "afterRelease")
        )
        item=sortableItem.content
    )}}
{{/each}}